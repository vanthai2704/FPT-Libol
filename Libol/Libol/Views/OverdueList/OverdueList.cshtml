                <div class="form-group col-md-7"><input class="form-control " type="date" id="txtNgayMuonTu" /></div>
            </div>
            <div class="form-group row col-6">
                <label class="control-label col-md-5 align-self-center">Đến: </label>
                <div class="form-group col-md-7"><input class="form-control " type="date" id="txtNgayMuonDen" /></div>
            </div>
        </div>
        <div class="form-group row col-12">
            <div class="form-group row col-6">
                <label class="control-label col-md-5 align-self-center">Ngày phải trả Từ : </label>
                <div class="form-group col-md-7"><input class="form-control " type="date" id="txtNgayTraTu" /></div>
            </div>
            <div class="form-group row col-6">
                <label class="control-label col-md-5 align-self-center">Đến: </label>
                <div class="form-group col-md-7"><input class="form-control " type="date" id="txtNgayTraDen" /></div>
            </div>
        </div>
        <div class="form-group row col-12">
            <div class="form-group row col-7">
                <label class="control-label col-md-6 align-self-center">Số ngày quá hạn Từ : </label>
                <input type="number" class="form-control col-md-4" id="txtSoNgayQuaHan">
            </div>
            <div class="form-group row col-5">
                <label class="control-label col-md-6 align-self-center">Đến: </label>
                <input type="number" class="form-control col-md-4" id="txtSoNgayQuaHanDen"> Ngày
            </div>
        </div>
    </div>
</div>

<label style="margin-top:10px; text-align: right ; color:blue">Danh sách những thẻ quá hạn</label>

<div id="content"></div>


<script>
    function getOverduelist() {

        var empObj = {
            intUserID: 43,
            strPatronIDs: "",
            txtSoThe: document.getElementById("txtSoThe").value,
            txtTenBanDoc: document.getElementById("txtTenBanDoc").value,
            ddlNhomBanDoc: -1,
            ddlTruong: -1,
            ddlKhoa: -1,
            txtKhoaHoc: document.getElementById("txtKhoaHoc").value,
            txtLopHoc: document.getElementById("txtLopHoc").value,
            ddlLib: -1,
            ddlLoc: -1,
            txtTenTaiLieu: document.getElementById("txtTenTaiLieu").value,
            txtSDKCB: document.getElementById("txtSDKCB").value,
            txtNgayMuonTu: document.getElementById("txtNgayMuonTu").value,
            txtNgayMuonDen: document.getElementById("txtNgayMuonDen").value,
            txtNgayTraTu: document.getElementById("txtNgayTraTu").value,
            txtNgayTraDen: document.getElementById("txtNgayTraDen").value,
            txtSoNgayQuaHan: document.getElementById("txtSoNgayQuaHan").value,
            txtSoNgayQuaHanDen: document.getElementById("txtSoNgayQuaHanDen").value
        };
        $.ajax({
            url: "/OverdueList/OverdueListResult",
            data: JSON.stringify(empObj),
            contentType: "application/json;charset=utf-8",
            type: "POST",
            success: function (result) {
                $("#content").html(result);
            },
            error: function (errormessage) {
                console.log("abcssd");
            }
        });
    }
</script>



