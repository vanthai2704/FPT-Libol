<head>
    <link rel="stylesheet" type="text/css" href="~/Content/DataTables/DataTables-1.10.18/css/dataTables.bootstrap4.css">
    <link rel="stylesheet" type="text/css" href="~/Content/DataTables/Select-1.3.0/css/select.bootstrap4.css">
    <link rel="stylesheet" type="text/css" href="~/Content/DataTables/dataTables.checkboxes.css">
    <script type="text/javascript" charset="utf8" src="~/Content/DataTables/DataTables-1.10.18/js/jquery.dataTables.js"></script>
    <script type="text/javascript" charset="utf8" src="~/Content/DataTables/DataTables-1.10.18/js/dataTables.bootstrap4.js"></script>
    <script type="text/javascript" charset="utf8" src="~/Content/DataTables/Select-1.3.0/js/dataTables.select.js"></script>
    <script type="text/javascript" charset="utf8" src="~/Content/DataTables/dataTables.checkboxes.min.js"></script>
    <script>
        var patronid;
        $(document).ready(function () {
            var table = $('#table_loaninfo').DataTable({
                columnDefs: [{
                    'checkboxes': {
                        'selectRow': true
                    }
                }],
                select: {
                    style: 'os',
                },
                columns: [
                    { "data": "FullName" },
                    {
                        "data": "Code",
                        "render": function (data, type, row, meta) {
                            data = '<a href="#" onclick="getPatronInfo(' + "'" + data + "'" + ')">' + data + '</a>';
                            return data;
                        }
                    },
                    { "data": "DOB" },
                    { "data": "ValidDate" },
                    { "data": "ExpiredDate" },
                ],
                order: [[1, 'asc']],
                orderCellsTop: true,

            });

            $('#table_loaninfo').on('click', '#select_all', function () {
                if ($('#select_all:checked').val() === 'on') {
                    table.rows({ search: 'applied' }).select();
                }
                else {
                    table.rows().deselect();
                }
            });
        });

        function getPatronInfo(Code) {
            
            var empObj = {
                code: Code,
            };
            $.ajax({
                contentType: "application/json;charset=utf-8",
                type: "POST",
                url: "/CheckOut/GetPatronSearchDetail",
                data: JSON.stringify(empObj),
                success: function (result) {    
                    patronid = result.ID;
                    $("#ttxtFullName").html(result.Name);
                    $("#txtEthic").html(result.intEthnicID);
                    $("#txtDOB").html(result.strDOB);
                    $("#txtSex").html(result.Sex);
                    $("#txtEducationlevel").html(result.strEducationlevel);
                    $("#txtCode").html(result.strCode);
                    $("#txtValidDate").html(result.strValidDate);
                    $("#txtExpiredDate").html(result.strExpiredDate);
                    $("#txtPatronGroup").html(result.intPatronGroupID);
                    $("#txtFaculty").html(result.intFacultyID);
                    $("#txtOccupation").html(result.intOccupationID);
                    $("#txtCollege").html(result.intCollegeID);
                    $("#txtWorkPlace").html(result.strWorkPlace);
                    $("#txtAddress").html(result.strAddress);
                    $("#txtTelephone").html(result.strTelephone);
                    $("#txtMobile").html(result.strMobile);
                    $("#stringEmail").html(result.strEmail);
                    $("#myModal4").modal("show");
                },
                error: function (errormessage) {
                }
            });
        }

        function updatePatron() {
            location.href = '/Patron/Create?strPatronID=' + patronid;
        }
    </script>
</head>

