
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-3">
        <table class="table table-bordered table-striped" id="123" style="border-collapse: collapse" , border="1">
            <tr>
                <th>Nhóm bạn đọc</th>
                <th>Số lượt mượn</th>
            </tr>
            @foreach (var item in ViewBag.rnow)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.TotalLoan</td>
                </tr>
            }
        </table>
    </div>

    <div class="col-md-9">
        <div style="text-align:center; padding-top:20px">
            <h4 style="font-size:16px">Biểu đồ hình cột</h4>
        </div>

        <div id="columnchart_values_now" style="width: 100%; height: 50%; font-size:10px"></div>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <table class="table table-bordered table-striped" id="1234" style="border-collapse: collapse" , border="1">
            <tr>
                <th>Nhóm bạn đọc</th>
                <th>Số lượt mượn</th>
            </tr>
            @foreach (var item in ViewBag.rpass)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.TotalLoan</td>
                </tr>
            }
        </table>
    </div>

    <div class="col-md-9">
        <div style="text-align:center; padding-top:20px">
            <h4 style="font-size:16px">Biểu đồ hình cột</h4>
        </div>

        <div id="columnchart_values_pass" style="width: 100%; height: 50%; font-size:10px"></div>
    </div>
</div>



<div style="text-align:center">
    <div style="text-align:center; padding-top:30px">
        <input type="button" value="Lưu vào file Excel" style="background-color:blue; color:white" onclick="exportTableToExcel('123', 'Patron Group Now'); exportTableToExcel('1234', 'Patron Group Pass')" />
    </div>
</div>

<script src="~/Scripts/GoodleDrawingChart.js"></script>

<script type="text/javascript">
    google.charts.load("current", { packages: ['corechart'] });
    google.charts.setOnLoadCallback(drawChart);
    google.charts.setOnLoadCallback(drawChart2);

    function drawChart2() {
        var data = google.visualization.arrayToDataTable([
            ["Nhóm bạn đọc", "Số lần", { role: "style" }],

            @foreach (var item in ViewBag.rnow)
            {
                <text>['@item.Name', @item.TotalLoan, "blue"],</text>
            }
        ]);

        var view = new google.visualization.DataView(data);
        view.setColumns([0, 1,
            {
                calc: "stringify",
                sourceColumn: 1,
                type: "string",
                role: "annotation"
            },
            2]);

        var options = {
            title: "",
            bar: { groupWidth: "80%" },
            legend: { position: "none" },

            hAxis: {
                title: 'nhóm bạn đọc',
            },
            vAxis: {
                title: 'số lần mượn',
                gridlines: { count: 100 },
            }

        };
        var chart = new google.visualization.ColumnChart(document.getElementById("columnchart_values_now"));
        chart.draw(view, options);
    }

    function drawChart() {
                var data = google.visualization.arrayToDataTable([
            ["Nhóm bạn đọc", "Số lần", { role: "style" }],

            @foreach (var item in ViewBag.rpass)
            {
                <text>['@item.Name', @item.TotalLoan, "blue"],</text>
            }
        ]);

        var view = new google.visualization.DataView(data);
        view.setColumns([0, 1,
            {
                calc: "stringify",
                sourceColumn: 1,
                type: "string",
                role: "annotation"
            },
            2]);

        var options = {
            title: "",
            bar: { groupWidth: "80%" },
            legend: { position: "none" },

            hAxis: {
                title: 'nhóm bạn đọc',
            },
            vAxis: {
                title: 'số lần mượn',
                gridlines: { count: 100 },
            }

        };
        var chart = new google.visualization.ColumnChart(document.getElementById("columnchart_values_pass"));
        chart.draw(view, options);
    }

    function exportTableToExcel(tableID, filename = '') {
        var downloadLink;
        var dataType = 'application/vnd.ms-excel';
        var tableSelect = document.getElementById(tableID);
        var tableHTML = tableSelect.outerHTML.replace(/ /g, '%20');
        // Specify file name
        filename = filename ? filename + '.xls' : 'excel_data.xls';
        // Create download link element
        downloadLink = document.createElement("a");
        document.body.appendChild(downloadLink);
        if (navigator.msSaveOrOpenBlob) {
            var blob = new Blob(['\ufeff', tableHTML], {
                type: dataType
            });
            navigator.msSaveOrOpenBlob(blob, filename);
        } else {
            // Create a link to the file
            downloadLink.href = 'data:' + dataType + ', ' + tableHTML;
            // Setting the file name
            downloadLink.download = filename;
            //triggering the function
            downloadLink.click();
        }
    }
</script>

