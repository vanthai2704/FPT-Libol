
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>

    <style>

        body {
            overflow-x: hidden;
            box-sizing: border-box;
        }

        #sidebar-wrapper {
            min-height: 100vh;
            margin-left: -15px !important;
            -webkit-transition: margin .25s ease-out;
            -moz-transition: margin .25s ease-out;
            -o-transition: margin .25s ease-out;
            transition: margin .25s ease-out;
        }

            #sidebar-wrapper .sidebar-heading {
                padding: 0.875rem 1.25rem;
                font-size: 1.2rem;
            }

            #sidebar-wrapper .list-group {
                width: 20rem;
                padding-left: 5px;
            }


        @@media (min-width: 768px) {
            #sidebar-wrapper {
                margin-left: 0;
            }

            #page-content-wrapper {
                min-width: 0;
                width: 100%;
            }

            #wrapper.toggled #sidebar-wrapper {
                margin-left: -15rem;
            }
        }
    </style>
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <h4 style="margin:1rem;">Ghi trả </h4>
            <div class="list-group list-group-flush">
                <div class="col">
                    <h5>Tùy chọn</h5>
                    <div class="form-row">
                        <div class="col">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1" checked>
                                <label class="form-check-label" for="exampleCheck1">Tự động ghi nhận phí phạt</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-row" style="margin-bottom: 5px;">
                        <div class="col">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1" checked>
                                <label class="form-check-label" for="exampleCheck1">Đề ghi thu phí quá hạn</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-row" style="margin-bottom: 5px;">
                        <div class="col-4">
                            <div class="form-group"><label class="col-form-label">Ngày trả:</label></div>
                        </div>
                        <div class="col-8">
                            <div class="form-group"><input class="form-control" type="date" value="06/11/2019" /></div>
                        </div>
                    </div>
                    <div class="form-row" style="margin-top: 0px;">
                        <div class="col-3"><label class="col-form-label">Số thẻ:</label></div>
                        <div class="col"><form id="checkinbycardnumber"><input class="form-control" type="text" /></form></div>
                        <div class="col-4"><label class="col-form-label"><a href="/CheckOut/FindByCardNumber">Tìm</a> | <a href="#">Thêm</a></label></div>
                    </div>
                    <div class="form-row" style="margin-top: 0px;margin-bottom: 5px;">
                        <div class="col-3"><label class="col-form-label">ĐKCB:</label></div>
                        <div class="col"><form id="checkinbyDKCB"><input class="form-control" type="text" /></form></div>
                        <div class="col-4"><label class="col-form-label"><a href="#">Tìm</a> | <a href="#">Thêm</a></label></div>
                    </div>
                    <div class="form-row">
                        <div class="col"><button class="btn btn-primary" type="button" id="myButton">Ghi trả</button></div>

                    </div>
                </div>


            </div>
        </div>
        <div class="col" id="contentcheckin"></div>
    </div>
</body>

<script type="text/javascript">
    document.getElementById("myButton").onclick = function (e) {
        e.preventDefault();
        $.ajax({
            url: "CheckIn/CheckInByDKCB",
            type: "Get",
            data: $(this).serialize(),
            success: function (Response) {
                $("#contentcheckin").html(Response)
            },
            error: function (jXHR, textStatus, errorThrown) {
                alert(errorThrown);
            }
        });
    };

    $('#checkinbycardnumber').on('submit', function (e) {
        e.preventDefault();
        $.ajax({
            url: "CheckIn/CheckInByCardNumber",
            type: "Get",
            data: $(this).serialize(),
            success: function (Response) {
                $("#contentcheckin").html(Response)
            },
            error: function (jXHR, textStatus, errorThrown) {
                alert(errorThrown);
            }
        });
    });

    $('#checkinbyDKCB').on('submit', function (e) {
        e.preventDefault();
        $.ajax({
            url: "CheckIn/CheckInByDKCB",
            type: "Get",
            data: $(this).serialize(),
            success: function (Response) {
                $("#contentcheckin").html(Response)
            },
            error: function (jXHR, textStatus, errorThrown) {
                alert(errorThrown);
            }
        });
    });

</script>

