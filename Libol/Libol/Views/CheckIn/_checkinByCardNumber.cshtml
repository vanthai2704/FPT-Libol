}
<head>
    <style>
        .columnleft {
            float: right;
        }
    </style>
    <link rel="stylesheet" type="text/css" href="~/Content/DataTables/DataTables-1.10.18/css/dataTables.bootstrap4.css">
    <link rel="stylesheet" type="text/css" href="~/Content/DataTables/Select-1.3.0/css/select.bootstrap4.css">
    <script type="text/javascript" charset="utf8" src="~/Content/DataTables/DataTables-1.10.18/js/jquery.dataTables.js"></script>
    <script type="text/javascript" charset="utf8" src="~/Content/DataTables/DataTables-1.10.18/js/dataTables.bootstrap4.js"></script>
    <script type="text/javascript" charset="utf8" src="~/Content/DataTables/Select-1.3.0/js/dataTables.select.js"></script>
    <script>
        $(document).ready(function () {
            var table = $('#table_loaninfo').DataTable({
                columnDefs: [{
                    orderable: false,
                    className: 'select-checkbox',
                    targets: 0
                }],
                select: {
                    style: 'os',
                    selector: 'td:first-child'
                },
                order: [[1, 'asc']],
                orderCellsTop: true,

            });

            $('#table_loaninfo').on('click', '#select_all', function () {
                if ($('#select_all:checked').val() === 'on') {
                    table.rows({ search: 'applied' }).select();
                }
                else {
                    table.rows().deselect();
                }
            });
        

            $('#abc1').click(function (e) {
                alert('abc')
            e.preventDefault();
            var empObj = {
                strFullName: '',
                strFixDueDate: '2029-06-11',
                intType : 1,
                intAutoPaid : 0,
                strCopyNumbers : 'TK/HCHL001415',
                strCheckInDate: '06/21/2019',
                strTransIDs : '0',
                strPatronCode : '900047107',
                intError : 0
            };
            $.ajax({
                url: "/CheckIn/CheckInByDKCB",
                data: JSON.stringify(empObj),
                contentType: "application/json;charset=utf-8",
                type: "POST",
                success: function (result) {
                    console.log("abcssd");  
                    $("#contentcheckin").html(result);
                },
                error: function (errormessage) {
                    console.log("abcssd");
                    alert('fail');
                }
            });
            });
            //$('#abc1').on('click', function () {
            //    alert('success');
            //})
        });
    </script>
</head>

<h4 style="margin-top:1rem;">Trả ấn phẩm</h4>
<h5 style="padding-bottom:10px;">Thông tin bạn đọc</h5>
<div class="form-row" style="padding-bottom:10px;">
    <div class="col-7">
        <div class="form-row">
            <div class="col-2" style="padding-top:5px;">
                <img src="~/Content/Images/NoImage.png" />
            </div>
            <div class="col">
                <div class="form-row">
                    <div class="col">
                        <div class="form-row">
                            <div class="col"><label>Tên số thẻ: <strong>@patroninfo.FirstName @patroninfo.MiddleName @patroninfo.LastName (@patroninfo.Code)</strong></label><a href="#" style="margin-left: 15px;" data-toggle="modal" data-target="#myModal">Thông tin chi tiết</a></div>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col"><label class="col-form-label">Ngày sinh: <strong>@string.Format("{0:MM/dd/yyyy}", patroninfo.DOB)</strong></label></div>
                </div>
                <div class="form-row">
                    <div class="col"><label class="col-form-label">Giá trị thẻ: <strong>@patroninfo.ValidDate.ToString("dd/MM/yyyy") - @patroninfo.ExpiredDate.ToString("dd/MM/yyyy")</strong></label></div>
                </div>
                <div class="form-row">
                    <div class="col"><label class="col-form-label">Nhóm: <strong>Sinh viên FU Hà Nội</strong></label></div>
                </div>
            </div>
        </div>
    </div>
</div>
<h5>Bạn đọc này cũng đang mượn các ấn phẩm</h5>
@if (patronloaninfo.Count() > 0)
{
    <table id="table_loaninfo" class="table table-striped table-bordered datatables">
        <thead>
            <tr>
                <th style="text-align: center;"><input type="checkbox" id="select_all" /></th>
                <th>Nhan đề</th>
                <th>ĐKCB</th>
                <th>Ngày mượn</th>
                <th>Ngày trả</th>
                <th>Ghi chú</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in patronloaninfo)
            {
                <tr>
                    <td></td>
                    <td>@item.TITLE</td>
                    <td>@item.COPYNUMBER</td>
                    <td>@string.Format("{0:yyyy-MM-dd}", item.CHECKOUTDATE)</td>
                    <td>@string.Format("{0:yyyy-MM-dd}", item.DUEDATE)</td>
                    <td>@item.NOTE</td>
                </tr>
            }
        </tbody>
    </table>
}
