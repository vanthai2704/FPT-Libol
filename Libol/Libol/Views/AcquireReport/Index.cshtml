
@{
    ViewBag.Title = "Báo cáo bổ sung";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>BaoCaoBoSung</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    @*<link rel="stylesheet" href="assets/css/Header_Libol.css">*@
    @*<link rel="stylesheet" href="assets/css/styles.css">*@
    @*<link rel="stylesheet" href="assets/css/Team-Boxed.css">*@

    <link href="~/Content/multiselect.css" rel="stylesheet" />
    <script src="~/Scripts/multiselect.min.js"></script>
</head>

<body>
    <h5 style="margin-top:20px;">Báo cáo bổ sung</h5>
    @using (Html.BeginForm("BaoCaoBoSung_new", "AcquireReport"))
    {
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr></tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="text-right">Thư viện</td>
                        <td>
                            @Html.DropDownList("Library", ViewData["lib"] as List<SelectListItem>)
                        </td>

                    </tr>
                    <tr>
                        <td class="text-right" style="padding-top:20px;">Kho</td>
                        <td>
                            @Html.DropDownList("Location", new SelectList(string.Empty, "Value", "Text"), "Hãy chọn Kho")
                        </td>
                    </tr>
                    <tr>
                        <td class="text-right">Mã số đơn đặt</td>
                        <td><input id="RecordNumber" name="PO" type="text"></td>
                    </tr>
                    <tr>
                        <td class="text-right">Từ thời gian bổ sung</td>
                        <td><input name="StartDate" type="date" /> </td>
                        <td class="text-right">Tới thời gian bổ sung</td>
                        <td>&nbsp;<input name="EndDate" type="date"></td>
                    </tr>
                    <tr>
                        <td class="text-right">Sắp xếp theo ĐKCB</td>
                        <td class="d-xl-flex align-items-xl-start">
                            <select id='SortBy' name="OrderBy">
                                <option name="OrderByasc" value='asc' selected>Tăng dần</option>
                                <option name="OrderBydesc" value='desc'>Giảm dần</option>
                            </select>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="btn-group d-xl-flex justify-content-xl-center" role="group">
            <button id="preview" type="submit" style="margin-right:20px;">Xem thử</button>
            <button id="print" type="button" style="margin-right:20px;">In</button>
            <button id="reset" type="button">Đặt lại</button>
        </div>
    }
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $("#Library").change(function () {
                $("#Location").empty();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("GetLocations")', // we are calling json method
                    dataType: 'json',
                    data: { id: $("#Library").val() },
                    success: function (locs) {
                        $.each(locs, function (i, loc) {
                            $("#Location").append('<option value="' + loc.Value + '">' +
                                loc.Text + '</option>');
                        });
                    }
                //error: function (ex) {
                //    alert('Failed to retrieve states.' + ex);
                //}
                });
                return false;
            });
        });
        //$('#Form').validate({
        //    rules:{
        //        Library: 'required',
        //        Location: 'required'
        //    }
        //});
    </script>
    <script>
        $(window).bind("pageshow", function () {
            $("#Library").val('');
            $("#Location").val('');
        });
    </script>
</body>


