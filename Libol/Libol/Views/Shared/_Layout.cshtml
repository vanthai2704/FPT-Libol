<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FPT Libol</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .navbar{
            padding: 0 !important;
        }
        a.nav-link {
            color: white !important;
            padding: 1rem !important;
        }
        .navbar-dark .navbar-brand {
            padding-left: 1rem;
        }
        .navbar-dark .navbar-nav .show > .nav-link, .navbar-dark .navbar-nav .active > .nav-link, .navbar-dark .navbar-nav .nav-link.show, .navbar-dark .navbar-nav .nav-link.active {
            background-color: #d8491f !important;
        }
        a.nav-link:hover {
            background-color: #d8491f;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark" style="background-color:#f05123 !important">
                <a class="navbar-brand" href="/Home">FPT Libol</a>
                <div class="collapse navbar-collapse" id="navbarsExampleDefault">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item dropdown" onclick="highlight(this)">
                            <a class="nav-link dropdown-toggle" href="#" id="dropdown00" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Quản lý</a>
                            <div class="dropdown-menu" aria-labelledby="dropdown00">
                                <a class="dropdown-item" href="#">Quản lý</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown" onclick="highlight(this)">
                            <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Bạn đọc</a>
                            <div class="dropdown-menu" aria-labelledby="dropdown01">
                                <a class="dropdown-item" href="/CIR_PATRON/PatronProfile">Hồ sơ</a>
                                <a class="dropdown-item" href="#">Thẻ</a>
                                <a class="dropdown-item" href="#">Xử lý lô</a>
                                <a class="dropdown-item" href="#">Thống kê</a>
                            </div>
                        </li>
                        <li class="nav-item" onclick="highlight(this)">
                            <a class="nav-link" href="/Catalogue/MainTab">Biên mục</a>
                        </li>
                        
                        <li class="nav-item dropdown" onclick="highlight(this)">
                            <a class="nav-link dropdown-toggle" href="#" id="dropdown03" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Mượn trả</a>
                            <div class="dropdown-menu" aria-labelledby="dropdown03">
                                <a class="dropdown-item" href="#">Ghi mượn</a>
                                <a class="dropdown-item" href="#">Ghi trả</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown" onclick="highlight(this)">
                            <a class="nav-link dropdown-toggle" href="#" id="dropdown04" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Bổ sung</a>
                            <div class="dropdown-menu" aria-labelledby="dropdown04">
                                <a class="dropdown-item" href="#">Bổ sung</a>
                                <a class="dropdown-item" href="#">Kho</a>
                                <a class="dropdown-item" href="#">Thống kê</a>
                                <a class="dropdown-item" href="/PrintBarcode">In mã vạch</a>
                                <a class="dropdown-item" href="/PrintLabel">In nhãn</a>
                            </div>
                        </li>
                        <li class="nav-item" onclick="highlight(this)">
                            <a class="nav-link" href="#">Thiết đặt</a>
                        </li>
                    </ul>
                    <a class="nav-link" href="#">Đăng xuất</a>
                </div>
            </nav>


        </div>
    </div>
    <div class="body-content">
        @RenderBody()
        <div style="bottom: 0;width: 98%;">
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - FPT Libol Group</p>
            </footer>
        </div>
        
    </div>

    <script>
        function highlight(elem) {
            var a = document.getElementsByTagName('li');
            for (i = 0; i <= a.length; i++) {
                a[i].classList.remove('active')
            }
            elem.classList.add('active');
        }
    </script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
