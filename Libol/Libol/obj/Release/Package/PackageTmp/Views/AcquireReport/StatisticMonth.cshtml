
@{
    ViewBag.Title = "StatisticMonth";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <script type="text/javascript" src="~/Scripts/load.js"></script>
</head>

<body>
    <h5 style="margin-top:20px;">Thống kê bổ sung theo các tháng trong năm</h5>
    <table class="table">
        <thead>
            <tr></tr>
        </thead>
        <tbody>
            <tr>
                <td class="text-right">Thư viện</td>
                <td>
                    @Html.DropDownList("Library", ViewData["lib"] as List<SelectListItem>)
                </td>
                <td class="text-right">Kho</td>
                <td>
                    @Html.DropDownList("Location", new SelectList(string.Empty, "Value", "Text"), "Hãy chọn Kho")
                </td>
            </tr>
            <tr>
                <td class="text-right">Năm</td>
                <td>
                    @*@Html.DropDownList("InYear", ViewData["year"] as List<SelectListItem>)*@
                    @Html.DropDownList("InYear", new SelectList(Enumerable.Range(2007, (DateTime.Now.Year - 2007) + 1).Reverse().ToList()), "-- Hãy chọn năm --")
                </td>
            </tr>
        </tbody>
    </table>
    <div class="btn-group d-xl-flex justify-content-xl-center" role="group">
        <button id="stat" type="submit" style="margin-right:20px;">Thống kê</button>
        <button id="back" type="button" style="margin-right:20px;">Quay lại</button>
    </div>
    <hr />
    <div id="ContentStatMonth"></div>
    <script>
        $(document).ready(function () {
            $("#Library").change(function () {
                $("#Location").empty();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("GetLocations")', // we are calling json method
                    dataType: 'json',
                    data: { id: $("#Library").val() },
                    success: function (locs) {
                        $.each(locs, function (i, loc) {
                            $("#Location").append('<option value="' + loc.Value + '">' +
                                loc.Text + '</option>');
                        });
                    }
                });
                return false;
            });
        });
        document.getElementById("stat").onclick = function () {
            var empObj = {
                strLibID: document.getElementById("Library").value,
                strLocID: document.getElementById("Location").value,
                strInYear: document.getElementById("InYear").value,
            };
            $.ajax({
                url: "GetMonthStats",
                data: JSON.stringify(empObj),
                contentType: "application/json;charset=utf-8",
                type: "POST",
                beforeSend: function () {
                    $("#ContentStatMonth").html("<h4>Loading...</h4>");
                },
                success: function (result) {
                    $("#ContentStatMonth").html(result)
                },
                error: function (errormessage) {
                    console.log("error");
                }
            });
        };
        document.getElementById("back").onclick = function () {
            window.location.href = "AcquireStatisticIndex";
        };

    </script>
</body>